<div class="container container-fluid">
    <div class="row">
        <div class="col">
            <h3>Kişiler Raporu - Lokasyon</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col w-100">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <table id="tblPersonReport" class="table table-striped listtable">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var tblPersonList = $('#tblPersonReport').DataTable({        
        select: true,
        paging: false,
        ordering: true,        
        language: {
            url: "/datatable/i18n/tr.json"
        },
        order: [[2, "desc"]],

        ajax: {
            url: "/PersonReport/PersonReportDtoData",
            method: "POST"
        },
        columns: [            
            { data: 'Location', title: "Konum", name: 'Location', width: "50%" },
            { data: 'NumberOfPerson', title: "Kişi Sayısı", name: 'NumberOfPerson', width: "20%" },
            { data: 'NumberOfPhoneNumber', title: "Telefon No Sayısı", name: 'NumberOfPhoneNumber', width: "20%" }
        ],
    });
</script>